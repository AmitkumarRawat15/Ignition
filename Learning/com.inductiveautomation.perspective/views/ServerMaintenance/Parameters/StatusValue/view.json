{
  "custom": {},
  "params": {
    "value": "value"
  },
  "propConfig": {
    "params.value": {
      "paramDirection": "input",
      "persistent": true
    }
  },
  "props": {
    "defaultSize": {
      "height": 31,
      "width": 93
    }
  },
  "root": {
    "children": [
      {
        "meta": {
          "name": "Label"
        },
        "position": {
          "height": 26,
          "width": 80,
          "x": 6,
          "y": 3
        },
        "propConfig": {
          "props.style.backgroundColor": {
            "binding": {
              "config": {
                "path": "this.props.text"
              },
              "transforms": [
                {
                  "fallback": "#AAAAAA",
                  "inputType": "scalar",
                  "mappings": [
                    {
                      "input": "True",
                      "output": "#00AC00"
                    },
                    {
                      "input": "False",
                      "output": "#FF0000"
                    }
                  ],
                  "outputType": "color",
                  "type": "map"
                }
              ],
              "type": "property"
            }
          },
          "props.text": {
            "binding": {
              "config": {
                "path": "view.params.value"
              },
              "transforms": [
                {
                  "code": "\tif \"true\" or \"Connected\" in value:\n\t\treturn \"True\"\n\telse:\n\t\treturn \"False\"",
                  "type": "script"
                }
              ],
              "type": "property"
            }
          }
        },
        "props": {
          "style": {
            "borderRadius": "4px",
            "classes": "Framework/Card/Value",
            "color": "#FFFFFF",
            "textAlign": "center"
          }
        },
        "type": "ia.display.label"
      }
    ],
    "meta": {
      "name": "root"
    },
    "type": "ia.container.coord"
  }
}